<header class="sticky top-0 bg-white border-b border-zinc-200 z-50">
  <div class="container mx-auto flex flex-col md:flex-row items-center justify-between py-4 px-6 md:px-8 lg:px-10 xl:px-12">

    <div class="flex items-center justify-between w-full md:w-auto">
      <a href="/">
        <img src="logo.svg" alt="My name logo" width="50" class="h-auto" />
      </a>
      <button id="menu-btn" class="md:hidden text-3xl text-zinc-700 focus:outline-none">
        <ion-icon name="menu-outline"></ion-icon>
      </button>
    </div>

    <ul id="menu" class="hidden md:flex flex-col md:flex-row gap-2 md:gap-8  md:static bg-white left-0 w-full md:w-auto mt-2 md:mt-0 p-4 md:p-0 z-40">
      <li><a href="#top" class="block py-2 text-lg text-zinc-600 hover:text-black font-medium transition">Home</a></li>
      <li><a href="#about" class="block py-2 text-lg text-zinc-600 hover:text-black font-medium transition">About</a></li>
      <li><a href="#technologies" class="block py-2 text-lg text-zinc-600 hover:text-black font-medium transition">Technologies</a></li>
      <li><a href="#projects" class="block py-2 text-lg text-zinc-600 hover:text-black font-medium transition">Projects</a></li>
      <li><a href="#contact" class="block py-2 text-lg text-zinc-600 hover:text-black font-medium transition">Contact</a></li>
    </ul>

  </div>
</header>


<script>
import { gsap } from 'gsap';

const menuBtn = document.getElementById('menu-btn');
const menu = document.getElementById('menu');
const navLinks = menu.querySelectorAll('a');
let isOpen = false;

menuBtn.addEventListener('click', () => {
  toggleMenu();
});

navLinks.forEach(link => {
  link.addEventListener('click', () => {
    if (isOpen) {
      gsap.to(menu, {
        height: 0,
        opacity: 0,
        duration: 0.3,
        ease: "power2.inOut",
        onComplete: () => {
          gsap.set(menu, { display: "none" });
        }
      });
      isOpen = false;
    }
  });
});

function toggleMenu() {
  if (!isOpen) {
    gsap.set(menu, { display: "block" });
    gsap.fromTo(menu,
      { height: 0, opacity: 0 },
      { height: "auto", opacity: 1, duration: 0.4, ease: "power2.out" }
    );
  } else {
    gsap.to(menu, {
      height: 0,
      opacity: 0,
      duration: 0.3,
      ease: "power2.inOut",
      onComplete: () => {
        gsap.set(menu, { display: "none" });
      }
    });
  }
  isOpen = !isOpen;
}
</script>
